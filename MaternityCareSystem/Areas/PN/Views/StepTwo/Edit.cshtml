                        <div class="panel-body">
                            <div class="row">
                                <div class="col-sm-12 ">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <div class="form-check">
                                                @Html.CheckBoxFor(model => model.homeDelivery, htmlAttributes: new { @class = "form-check-input chkone" })
