                    <div class="panel panel-success">
                        <div class="panel-heading">
                            Complications
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <div class="col-md-10">
                                            <div class="form-check">
                                                @Html.CheckBoxFor(model => model.CompBleeding, htmlAttributes: new { @class = "form-check-input" })
