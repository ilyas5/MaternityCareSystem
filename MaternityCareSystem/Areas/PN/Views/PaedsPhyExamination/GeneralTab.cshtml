@model MaternityCareSystem.Areas.PN.DataModels.PaedsForm
@{
    ViewBag.Title = "GeneralTab";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<link href="~/Content/css/plugins/steps/jquery.steps.css" rel="stylesheet" />
<script src="~/Scripts/js/plugins/steps/jquery.steps.min.js"></script>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Paeds Form</h5>
                <div class="ibox-tools">


                </div>
            </div>
            <div class="ibox-content">

                <div class="row" hidden>
                    @*<div class="col-md-3">
                            <div class="form-group">
                                @Html.TextBox("MotherName", null, htmlAttributes: new { @class = "form-control", @placeholder = "Mother Name" })
                            </div>
                        </div>*@

                    <div class="col-md-4 offset-8">

                        @using (Html.BeginForm("", "", new { area = "PN" }, FormMethod.Get))
                        {
                            <div class="input-group">
                                <input type="text" id="MrNumber" name="MrNumber" required="required" placeholder="MR Number" class="form-control">
                                <span class="input-group-append">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fa fa-search"></i> Search
                                    </button>
                                </span>
                            </div>

                        }
                    </div>

                </div>

                @using (Html.BeginForm("GeneralTab", "PaedsPhyExamination", new { Area = "PN" }, FormMethod.Post, htmlAttributes: new
                {
                    @class = "wizard-big wizard clearfix"
                }))
                {
                    <div class="steps clearfix mt-1">
                        <ul role="tablist">
                            <li role="tab" class="first current" aria-disabled="false" aria-selected="true">
                                <a id="form-t-0" href="#form-h-0" aria-controls="form-p-0">
                                    <span class="current-info audible">current step: </span>
                                    <span class="number">1.</span>General
                                </a>
                            </li>
                            <li role="tab" class="disabled" aria-disabled="true">
                                <a id="form-t-1" href="#form-h-1" aria-controls="form-p-1">
                                    <span class="number">2.</span>Physical Examination
                                </a>
                            </li>
                            <li role="tab" class="disabled" aria-disabled="true">
                                <a id="form-t-2" href="#form-h-2" aria-controls="form-p-2">
                                    <span class="number">3.</span> Lab Test
                                </a>
                            </li>
                            <li role="tab" class="disabled" aria-disabled="true">
                                <a id="form-t-3" href="#form-h-3" aria-controls="form-p-3">
                                    <span class="number">4.</span> Assessemnt
                                </a>
                            </li>
                            <li role="tab" class="disabled" aria-disabled="true">
                                <a id="form-t-4" href="#form-h-4" aria-controls="form-p-4">
                                    <span class="number">5.</span> Medication
                                </a>
                            </li>
                            <li role="tab" class="disabled last" aria-disabled="true">
                                <a id="form-t-5" href="#form-h-5" aria-controls="form-p-5">
                                    <span class="number">6.</span> Plan
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="content clearfix">
                        <h1 id="form-h-0" tabindex="-1" class="title current">General</h1>

                        <fieldset>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-row">
                                        <label class="col-form-label col-md-3">Patient Name</label>
                                        <div class="col-md-3">
                                            @Html.DropDownListFor(model => model.PatientId, null,"", htmlAttributes: new { @class = "form-control form-control-sm select2" })
                                            @Html.ValidationMessageFor(model => model.PatientId, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-6"></div>
                                        <label class="col-form-label col-md-3">Chief Complaint</label>
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(model => model.ChiefComplaint, 3, 97, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                            @Html.ValidationMessageFor(model => model.ChiefComplaint, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-3">Illness History</label>
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(model => model.IllnessHistory, 3, 97, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                            @Html.ValidationMessageFor(model => model.IllnessHistory, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-3">Current Medication</label>
                                        <div class="col-md-9">
                                            @Html.TextAreaFor(model => model.CurrentMedication, 3, 97, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                            @Html.ValidationMessageFor(model => model.CurrentMedication, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-row">
                                        <label class="col-form-label col-md-3">BCG</label>
                                        <div class="checkbox col-md-9">
                                            @Html.CheckBoxFor(model => model.BCG, htmlAttributes: new { @class = " " })
                                            @Html.ValidationMessageFor(model => model.BCG, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-12"> <span class="c"><strong>Polio </strong></span></div>

                                        <label class="col-form-label col-md-1">#1 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.PolioDate1, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.PolioDate1, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#2 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.PolioDate2, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.PolioDate2, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#3 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.PolioDate3, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.PolioDate3, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#4 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.PolioDate4, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.PolioDate4, "", new { @class = "text-danger" })
                                        </div>



                                        <div class="col-md-12"> <span class="c"><strong>DPT </strong></span></div>
                                        <label class="col-form-label col-md-1">#1 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.DPTDate1, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.DPTDate1, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#2 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.DPTDate2, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.DPTDate2, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#3 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.DPTDate3, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.DPTDate3, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#4 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.DPTDate4, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.DPTDate4, "", new { @class = "text-danger" })
                                        </div>


                                        <div class="col-md-12"> <span class="c"><strong>Hep B </strong></span></div>
                                        <label class="col-form-label col-md-1">#1 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.HepBDate1, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.HepBDate1, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#2 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.HepBDate2, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.HepBDate2, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#3 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.HepBDate3, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.HepBDate3, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-3"></div>
                                        <div class="col-md-12"> <span class="c"><strong>Hep A </strong></span></div>
                                        <label class="col-form-label col-md-1">#1 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.HepADate1, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.HepADate1, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#2 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.HepADate2, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.HepADate2, "", new { @class = "text-danger" })
                                        </div>
                                        <label class="col-form-label col-md-1">#3 Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.HepADate3, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.HepADate3, "", new { @class = "text-danger" })
                                        </div>
                                        <div class="col-md-3"></div>
                                        <label class="col-form-label col-md-1">Other</label>
                                        <div class="col-md-11">
                                            @Html.TextAreaFor(model => model.Other, 3, 97, new { htmlAttributes = new { @class = "form-control form-control-sm" } })
                                            @Html.ValidationMessageFor(model => model.Other, "", new { @class = "text-danger" })
                                        </div>


                                        <label class="col-form-label col-md-1">Date</label>
                                        <div class="col-md-2">
                                            @Html.EditorFor(model => model.OtherDate, new { htmlAttributes = new { @class = "form-control form-control-sm datepicker" } })
                                            @Html.ValidationMessageFor(model => model.OtherDate, "", new { @class = "text-danger" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </fieldset>

                        <h1 id="form-h-1" tabindex="-1" class="title disabled">Physical Examination</h1>
                        <fieldset id="form-p-1" role="tabpanel" aria-labelledby="form-h-1" class="body" aria-hidden="true" style="display: none;">
                        </fieldset>

                        <h1 id="form-h-2" tabindex="-1" class="title disabled">Lab Test</h1>
                        <fieldset id="form-p-2" role="tabpanel" aria-labelledby="form-h-2" class="body" aria-hidden="true" style="display: none;">
                        </fieldset>

                        <h1 id="form-h-3" tabindex="-1" class="title disabled">Assessment</h1>
                        <fieldset id="form-p-3" role="tabpanel" aria-labelledby="form-h-3" class="body" aria-hidden="true" style="display: none;">
                        </fieldset>

                        <h1 id="form-h-4" tabindex="-1" class="title disabled">Medication</h1>
                        <fieldset id="form-p-4" role="tabpanel" aria-labelledby="form-h-4" class="body" aria-hidden="true" style="display: none;">
                        </fieldset>
                        <h1 id="form-h-5" tabindex="-1" class="title disabled">Plan</h1>
                        <fieldset id="form-p-5" role="tabpanel" aria-labelledby="form-h-4" class="body" aria-hidden="true" style="display: none;">
                        </fieldset>
                    </div>
                    <div class="actions clearfix">
                        <ul role="menu" aria-label="Pagination">
                            @*<li class="" aria-disabled="false">
                                    <a href="@Url.Action("GetDetails","PhysicalExamination",new {id=Model.PatientId })" role="menuitem">Previous</a>
                                </li>*@
                            <li aria-hidden="false" aria-disabled="false"><button id="btn-save-physical" type="submit" class="btn btn-primary btn-block">Next</button></li>
                            @*<li aria-hidden="true" style="display: none;"><a href="#finish" role="menuitem">Finish</a></li>*@
                        </ul>
                    </div>
                }

            </div>
        </div>
    </div>

</div>
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

